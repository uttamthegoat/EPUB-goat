{
  "name": "epub-goat",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run clean && npm run copy-deps && npm run package",
    "copy-deps": "copyfiles -f node_modules/jszip/dist/jszip.js .",
    "clean": "rimraf jszip.js jszip.min.js epub-goat.xpi",
    "package": "web-ext build --overwrite-dest",
    "dev": "web-ext run",
    "lint": "web-ext lint"
  },
  "dependencies": {
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.5",
    "web-ext": "^8.9.0"
  }
}
